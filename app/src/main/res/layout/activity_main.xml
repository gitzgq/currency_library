<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/m_main_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <TextView
        android:id="@+id/m_main_fwgxwj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="访问其他文件的图片、视频、语音" />

    <TextView
        android:id="@+id/m_main_tv_title_ccfwkj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="存储访问框架" />

    <ImageView android:id="@+id/mIvImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <ImageView android:id="@+id/mIvImg2"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <com.example.myapplication.cutom.CtyRecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>